<h1>Books List</h1>

<% if @books.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Type</th>
        <th>Available</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book['id'] %></td>
          <td><%= book['name'] %></td>
          <td><%= book['type'] %></td>
          <td><%= book['available'] ? 'Yes' : 'No' %></td>
          <td><%= link_to 'View', book_path(book['id']) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No books available.</p>
<% end %>
